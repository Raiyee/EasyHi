@require "iconfont"
@require "transition"

::-webkit-scrollbar
  size 0
  display none
  background transparent

*
  user-select none
  zoom 1

input, textarea, [contenteditable], [contenteditable] *
  user-select text

body
  font-hei()

:root, body, #app
  height 100%

.scroll
  scrollSmooth()

.scroll-x
  scrollSmooth(true)

#app
  relative()
  max-width 1024px
  margin-left auto
  margin-right auto

a
  &, &:active, &:hover, &:visited
    color inherit
    text-decoration none

// @stylint off
input
  placeholder(color $placeholder-color,)
  &,
  &::-webkit-inner-spin-button,
  &::-webkit-outer-spin-button
    appearance none

.disabled
  color $remark-color !important
  cursor not-allowed
// @stylint on

.btn
  &.btn-hg
    padding 11px 15px

  &.btn-disabled-default,
  &.btn-disabled-primary
    border-color $remark-color

  &.btn-disabled-default
    color $remark-color

  &.btn-disabled-primary
    color $reverse-color
    background-color $remark-color

.input-group-addon
  .iconfont, .glyphicon
    color $icon-color

.form-control
  height $input-size

  &:not(:first-child)
    border-left 0
    padding-left 0

  &:not(:last-child)
    border-right 0

.input-group-addon,
.form-control
  padding 6px 12px

  &, &:focus
    box-shadow none
    border-color $input-border-color

  &:first-child
    padding-left 22px
    border-radius $half-input-size 0 0 $half-input-size

  &:last-child
    border-radius 0 $half-input-size $half-input-size 0

.input-group-primary
  borderRadius(, $half-input-size)
  overflow hidden
  background-color $back-light-color

  .input-group-addon,
  .form-control
    border-color transparent
    background-color transparent

  .input-group-addon.required
    padding-left 30px

    &:before
      relative()
      content '*'
      color $highlight-color
      top 2px
      margin-left -15px
      padding-right 5px

.has-error
  .input-group-primary
    borderRadius($highlight-color, $half-input-size)

  .input-group-addon, .form-control
    &, &:focus
      border-color transparent
      background-color transparent
      box-shadow none

  .input-group-addon
    color $primary-color

    .iconfont, .glyphicon
      color $icon-color

  .form-control-static
    color $highlight-color

.icon-character
  display inline-block
  line-height 1
  border-radius 5px
  padding 4px
  color $reverse-color
  scaleSize(10)
  margin-left -2px
  margin-right -2px

.panel-full
  padding-left 10px
  padding-right 10px
  border-radius 0

  .panel-heading, .panel-body, .panel-footer
    padding-left 0
    padding-right 0

.shadow-bottom
  box-shadow $bottom-shadow

// 1px fallback
.border
  @extend $border

.border-t
  @extend $border-t

.border-b
  @extend $border-b

.border-tb
  @extend $border-tb

.border-l
  @extend $border-l

.border-r
  @extend $border-r

.border-radius
  @extend $border-radius

.dashed-line
  border-bottom 1px dashed $border-color
  transform scaleY(.5)

.list-group
  background-color $back-light-color
  padding-left 0
  @extend $border-tb

  input, textarea
    border 0
    outline 0
    resize none

  textarea
    display block
    width 100%
    padding 5px 0

  .list-group-item
    position relative
    display block
    margin-left 10px
    padding 10px 10px 10px 0

    &:not(:last-child)
      @extend $border-b

    .list-group-left, .list-group-right
      display table-cell
      vertical-align middle

    .list-group-left
      white-space nowrap
      color $stress-color

    .list-group-right
      width 10000px

      &, span
        vertical-align middle

      &, input
        text-align right

.fix-bottom
  margin-bottom 72px

.fixed-bottom
  fixed(bottom)
  width 100%
  max-width 1024px
  padding 12px 16px
  background-color $back-light-color
  display flex
  z-index 100

  .btn
    flex 1
    font-size $stress-size

    + .btn
      margin-left 10px

.mask
  fixed(top right bottom left)
  z-index 500
  background-color $stress-color
  opacity .5

  &.transparent
    opacity 0

.vertical-line
  border1px-l($border-color)
  width 1px
  margin 0 8px

.split-line
  relative()

  &:before
    middleCenter(, scaleY(.5))
    content ''
    width 100%
    height 1px
    background-color $back-color

.textarea
  resize none
  width 100%
  padding 10px
  margin 0
  outline 0
  border 0
  vertical-align middle
  background-color transparent

.square
  border-radius 5px !important // @stylint ignore

.small-size
  scaleSize()

.small-size-left
  scaleSize(, , , left)

.small-size-right
  scaleSize(, , , right)

.smaller-size
  scaleSize($smaller-size)

.smaller-size-left
  scaleSize($smaller-size, , , left)

.smaller-size-right
  scaleSize($smaller-size, , , right)

.primary-size
  font-size $primary-size

.stress-size
  font-size $stress-size

.reserve-color
  color $reverse-color

.reverse-bg
  background-color $reverse-color

.remark-color
  color $remark-color

.remark-bg
  background-color $remark-color

.remark-lighter-color
  color $remark-lighter-color

.subtext-color
  color $subtext-color

.stress-color
  color $stress-color

.bg
  background-color $bg-color

.icon-color
  color $icon-color

.primary-color
  color $primary-color

.female-color
  color $female-color

.male-color
  color $male-color
