@require "iconfont"
@require "transition"

::-webkit-scrollbar
  size 0
  display none
  background transparent

body
  overflow-x hidden
  overflow-y auto

  &.bg
    background-color $bg-color

a
  &, &:active, &:hover, &:visited
    color inherit
    text-decoration none

// @stylint off
input
  placeholder(color $placeholder-color,)
  &,
  &::-webkit-inner-spin-button,
  &::-webkit-outer-spin-button
    appearance none
// @stylint on

.btn
  font-hei()
  &.btn-hg
    padding 11px 15px

.input-group-addon
  color $icon-color
  background-color $back-light-color !important // @stylint ignore

  &:first-child + .form-control
    border-left 0
    padding-left 0

    &:not(:last-child)
      border-right 0

.form-control
  height $input-size

  &, &:focus
    box-shadow none !important // @stylint ignore
    border-color $input-border-color

.input-group-addon,
.form-control
  padding 6px 12px
  border-color $input-border-color

  &:first-child
    padding-left 22px
    border-radius $half-input-size 0 0 $half-input-size

  &:last-child
    border-radius 0 $half-input-size $half-input-size 0

.has-error
  .form-control
    &, &:focus
      border-color $highlight-color
  .input-group-addon
    color $icon-color
    border-color $highlight-color
  .form-control-static
    color $highlight-color

.icon-character
  display inline-block
  line-height 1
  border-radius 5px
  padding 4px
  color $reverse-color
  scaleSize(10)
  margin-left -2px
  margin-right -2px

.remark-color
  color $remark-color

.remark-bg
  background-color $remark-color

.panel-full
  padding-left 10px
  padding-right 10px
  border-radius 0

  .panel-heading
    border-color $card-line-color

  .panel-heading, .panel-body, .panel-footer
    padding-left 0
    padding-right 0

// 1px fallback
.border
  border 1px solid $border-color

.border-t
  border-top 1px solid $border-color

.border-b
  border-bottom 1px solid $border-color

.border-tb
  border-top $border-color 1px solid
  border-bottom $border-color 1px solid
  background-image none

.border-l
  border-left 1px solid $border-color

.border-r
  border-right 1px solid $border-color

.border-radius
  borderRadius()

@media (min-resolution 2dppx)
  .border
    position relative
    border 0

  .border-t, .border-b, .border-l, .border-r, .border-tb
    border 0

  .border-t
    background-position left top
    background-image $border-t-line

  .border-b
    background-position left bottom
    background-image $border-b-line

  .border-t,
  .border-b,
  .border-tb
    background-repeat repeat-x
    background-size 100% 1px

  .border-tb
    background-image $border-t-line, $border-b-line
    background-position top, bottom

  .border-l
    background-position left top
    background-image $border-l-line

  .border-r
    background-position right top
    background-image $border-r-line

  .border-l,
  .border-r
    background-repeat repeat-y
    background-size 1px 100%

  .border:after
    content ""
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    background-image $border-t-line, $border-r-line, $border-b-line, $border-l-line
    background-size 100% 1px, 1px 100%, 100% 1px, 1px 100%
    background-repeat no-repeat
    background-position top, right, bottom, left
    padding 1px
    box-sizing border-box
    z-index $z-index-border
    pointer-events none

.list-group
  background-color $back-light-color
  padding-left 0
  @extend .border-tb

  input, textarea
    border 0
    outline 0
    resize none

  textarea
    display block
    width 100%
    padding 5px 0

  .list-group-item
    position relative
    display block
    margin-left 10px
    padding 10px 10px 10px 0

    &:not(:last-child)
      @extend .border-b

    .list-group-left, .list-group-right
      display table-cell
      vertical-align middle

    .list-group-left
      white-space nowrap
      color $stress-color

    .list-group-right
      width 10000px

      &, span
        vertical-align middle

      &, input
        text-align right

.fixed-bottom
  fixed()
  bottom 0
  width 100%
  padding 12px 16px
  background-color $back-light-color
  display flex

  .btn
    flex 1
    font-size $stress-size

    + .btn
      margin-left 10px

.white-mask, .black-mask
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 500
  background-color $stress-color

.white-mask
  opacity 0

.black-mask
  opacity .5
