THEME_COLOR ?= THEME_PURPLE
THEME_COLOR_DARKER ?= THEME_PURPLE_DARKER

// @stylint off
.theme-color
  color THEME_COLOR !important

.theme-bd
  border-color THEME_COLOR !important

.theme-bg
  background-color THEME_COLOR !important

.btn-theme-default
  bbColor THEME_COLOR THEME_COLOR REVERSE_COLOR
  bbActive THEME_COLOR_DARKER THEME_COLOR_DARKER REVERSE_COLOR
  &.inactive
    bbActive THEME_COLOR THEME_COLOR REVERSE_COLOR

.btn-theme-primary
  border-radius HALF_INPUT_SIZE
  bbColor REVERSE_COLOR THEME_COLOR
  bbActive REVERSE_COLOR THEME_COLOR_DARKER
  &.inactive
    bbActive REVERSE_COLOR THEME_COLOR
// @stylint on

@keyframes rotate
  from
    transform translate3d(-50%, -50%, 0) rotate(0) scale(1)
  50%
    transform translate3d(-50%, -50%, 0) rotate(180deg) scale(.6)
  to
    transform translate3d(-50%, -50%, 0) rotate(360deg) scale(1)

[lazy="loading"], [lazy="error"]
  relative()

  &:before, &:after
    middleCenter()
    content ' '
    size 35px
    border 2px solid
    border-color THEME_COLOR transparent
    border-radius 100%
    animation rotate 1s 0s ease-in-out infinite
    animation-fill-mode both

  &:after
    size 15px
    animation-duration .5s
    animation-direction reverse
