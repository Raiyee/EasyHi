THEME_COLOR ?= $theme-purple
THEME_COLOR_DARKER ?= $theme-purple-darker

// @stylint off
.theme-color
  color THEME_COLOR !important

.theme-bd
  border-color THEME_COLOR !important

.theme-bg
  background-color THEME_COLOR !important

.btn-theme-default
  bbColor THEME_COLOR THEME_COLOR $reverse-color
  bbActive THEME_COLOR_DARKER THEME_COLOR_DARKER $reverse-color
  &.inactive
    bbActive THEME_COLOR THEME_COLOR $reverse-color

.btn-theme-primary
  border-radius $half-input-size
  bbColor $reverse-color THEME_COLOR
  bbActive $reverse-color THEME_COLOR_DARKER
  &.inactive
    bbActive $reverse-color THEME_COLOR
// @stylint on

@keyframes rotate
  from
    transform translate3d(-50%, -50%, 0) rotate(0) scale(1)
  50%
    transform translate3d(-50%, -50%, 0) rotate(180deg) scale(.6)
  to
    transform translate3d(-50%, -50%, 0) rotate(360deg) scale(1)

[lazy="loading"], [lazy="error"]
  relative()

  &:before, &:after
    middleCenter()
    content ' '
    size 35px
    border 2px solid
    border-color THEME_COLOR transparent
    border-radius 100%
    animation rotate 1s 0s ease-in-out infinite
    animation-fill-mode both

  &:after
    size 15px
    animation-duration .5s
    animation-direction reverse
