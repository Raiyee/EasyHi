$menu-border-radius = 20px

.container
  fixed()
  bottom 80px
  z-index 100
  color $back-light-color
  background-color rgba(0, 0, 0, .6)
  border-top-right-radius $menu-border-radius
  border-bottom-right-radius $menu-border-radius
  transition width .5s ease
  white-space nowrap
  overflow hidden

  span
    display inline-block
    vertical-align middle
    padding 10px 18px
    cursor pointer

    &:global(.icon-floatingmenu)
      transform scale(20 / 14)

    + span
      min-width 55px
      padding-left 0
      padding-right 10px
      text-align center

.inactive
  color $input-border-color
