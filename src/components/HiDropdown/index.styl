.container
  :global
    .media
      background-color $back-light-color
      padding 10px
      margin-top 0
      .media-left, .media-right
        white-space nowrap

      ul
        display flex
        margin-bottom 0

        li
          flex 1
          text-align center
          white-space nowrap
.fixed
  fixed(top)
  top 0
  z-index 501
  border1px-b()

