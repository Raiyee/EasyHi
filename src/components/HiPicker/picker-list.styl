$item-height = 36px

.picker-list
  flex 1

.picker-container
  display inline-block
  vertical-align middle

.picker-title
  text-align center
  font-size 16px

.picker-content
  relative()
  overflow hidden

  &:before, &:after
    absolute()
    left 0
    content ''
    width 100%
    height $item-height
    z-index 2
    pointer-events none

  &:before
    top 0
    background-image linear-gradient(to bottom, $reverse-color 25%, rgba(255, 255, 255, .5) 75%)

  &:after
    bottom 0
    background-image linear-gradient(to top, $reverse-color 25%, rgba(255, 255, 255, .5) 75%)

.picker-highlight
  middleCenter()
  width 100%
  height $item-height

.picker-items
  relative()
  z-index 1
  padding 0 10px
  transition transform .5s

.picker-item
  font-size 18px
  height $item-height
  line-height $item-height
  overflow ellipsis
  cursor pointer

.picker-divider
  relative()
  display flex
  align-items center
  padding 0 17px

  &:before
    content ''
    middleCenter(, scale(.5))
    width 40px
    height 6px
    border-radius 3px
    background-color $input-border-color

  &.has-title
    margin-top 20px
