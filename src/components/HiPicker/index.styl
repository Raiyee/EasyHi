.pickers
  relative()
  perspective 500px
  display flex
  max-width 600px
  margin 0 auto
  color $primary-color

.pickers-title
  absolute()
  width 100%
  text-align center
  font-size $primary-size

.picker-divider
  relative()
  display flex
  align-items center
  padding 0 15px

  &:before
    content ''
    middleCenter(, scale(.5))
    width 40px
    height 6px
    border-radius 3px
    background-color $input-border-color

  &.has-title
    margin-top (20 / 14 * 16) px
