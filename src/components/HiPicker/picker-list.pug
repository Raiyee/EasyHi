div(:class="[classes.pickerList, `text-${textAlign}`, className]",
:style="{flex}",
v-touch="{methods: true}")
  div(:class="classes.pickerContainer")
    div(v-if="hasTitle", :class="classes.pickerTitle") {{ title || '&nbsp;' }}
    div(:class="[classes.pickerContent, {[classes.mask]: mask}]", :style="{height, maxWidth}")
      .border-tb(:class="classes.pickerHighlight")
      ul.list-unstyled(:class="classes.pickerItems", :style="{transform}")
        li(v-for="(value, index) of values",
        :key="value[valueKey]",
        :class="[classes.pickerItem, {'theme-color': currIndex === index}]",
        @tap="tapItem(index)") {{ value[textKey] }}
