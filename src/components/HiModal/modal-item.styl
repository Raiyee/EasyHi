// Kill the scroll on the body
:global(.modal-open)
  overflow hidden

  .modal
    overflow-x hidden
    overflow-y auto

// Container that the modal scrolls within
.modal
  fixed(left top right bottom)
  overflow hidden
  z-index 1050
  -webkit-overflow-scrolling touch
  pointer-events none
  // Prevent Chrome on Windows from adding a focus outline. For details, see
  // https://github.com/twbs/bootstrap/pull/10951.
  outline 0

  &.full
    :global
      .modal-content
        border 0
        border-radius 0
        box-shadow none

      .modal-header,
      .modal-body
        padding 0

      .modal-body
        overflow-y auto

  :global
    // Shell div to position the modal with bottom padding
    .modal-dialog
      relative()
      width auto
      margin 0 auto
      pointer-events auto
      max-width 1024px

    // Actual modal
    .modal-content
      relative()
      background-color $back-light-color
      border 1px solid $stress-lighter-color // old browsers fallback (ie8 etc)
      border 1px solid rgba(0, 0, 0, .2)
      border-radius 6px
      box-shadow 0 3px 9px rgba(0, 0, 0, .5)
      background-clip padding-box
      // Remove focus outline from opened modal
      outline 0

    // Modal header
    // Top section of the modal w/ title and dismiss
    .modal-header
      padding 10px
      border-bottom 1px solid $back-color
      clearfix()

    // Close icon
    .modal-header .close
      relative()
      z-index 10
      margin-top -2px

    // Title text within header
    .modal-title
      margin 0
      line-height (20 / 14)

    // Modal body
    // Where all modal content resides (sibling of .modal-header and .modal-footer)
    .modal-body
      relative()
      padding 10px

    // Footer (for actions)
    .modal-footer
      padding 10px
      clearfix() // clear it in case folks use .pull-* classes on buttons
      display flex

      .btn
        flex 1
        font-size 20px

        + .btn
          margin-left 10px
