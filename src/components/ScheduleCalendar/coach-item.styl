@require "../../styles/_variables"

.media
  padding 15px 10px
  margin-top 5px
  background-color REVERSE_COLOR
  border-bottom 1px solid CARD_LINE_COLOR
  box-shadow BOTTOM_SHADOW
  :global // @stylint ignore
    .media-object
      size 60px
    .btn-theme-default
      width 80px
      padding 4px

.time-items
  height 0
  overflow hidden
  transition height .5s
  > ol
    margin-top 20px
    > li
      relative()
      > :global(.iconfont)
        absolute()
        top 10px
        left 0
        margin-left 30px
        background-color REVERSE_COLOR
        transform translate3d(-50%, 0, 0)
      > ol
        margin-left 30px
        padding-left 40px
        padding-top 10px
        border-left 1px solid BACK_COLOR
        > li
          width 25%
          float left
          margin-bottom 10px
    + div :global(.btn)
      width 50%
      font-size 16px
      margin-top 15px
      margin-bottom 25px

.morning .time-item:global(.active)
  color MORNING_COLOR
  border-color MORNING_COLOR

.afternoon .time-item:global(.active)
  color AFTERNOON_COLOR
  border-color AFTERNOON_COLOR

.evening .time-item:global(.active)
  color EVENING_COLOR
  border-color EVENING_COLOR

.time-item
  relative()
  size 55px
  border-radius 50%
  border 1px solid REMARK_COLOR
  color REMARK_COLOR
  cursor pointer
  text-align center
  display table-cell
  vertical-align middle
  > span
    font-size 16px
    display block
    line-height 1
    &:global(.icon-check)
      absolute()
      top auto
      right 0
      bottom 0
    &:first-child
      transform scale(13 / 16)
    &:last-child
      transform scale(11 / 16)

.no-item
  text-align center
  font-size 15px
  color SUBTEXT_COLOR
  padding-top 50px
  padding-bottom 20px
