@require "../styles/_variables"

.schedule-calendar
  .panel
    margin-bottom 3px
    .panel-body
      padding 10px
  .calendar
    margin-bottom 0
    relative()
    li
      float left
      text-align center
      margin-left -5px
      color SUBTEXT_COLOR
      &.active
        color REVERSE_COLOR
      &.monday
        margin-left 0
      &, > div
        width 55px
        height 55px
      > div
        display table-cell
        vertical-align middle
        relative()
        z-index 1
        span
          display block
          &:first-child
            font-size 20px
          &:last-child
            font-size 16px
            transform scale(12 / 16)
      &.scroll-bg
        absolute()
        margin-left 0
        z-index 0
        top 0
        left 0
        border-radius 50%
        transform translate3d(0, 0, 0)
        transition transform 1s ease


