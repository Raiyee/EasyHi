@require "../styles/_variables"

CIRCLE_SIZE = 55px

.schedule-calendar
  .panel
    margin-bottom 3px
    .panel-body
      padding 10px
      overflow hidden
      @media (min-width: 768px)
        overflow auto
  .calendar
    margin-bottom 0
    relative()
    li
      width CIRCLE_SIZE
      height CIRCLE_SIZE
      z-index 1
      &.scroll-bg
        absolute()
        margin-left 0
        z-index 0
        top 0
        left 0
        border-radius 50%
        transform translate3d(0, 0, 0)
        visibility hidden
        &.active
          visibility visible
    &, .scroll-bg
      transition transform .5s
