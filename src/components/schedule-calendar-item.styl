@require "../styles/_variables"

CIRCLE_SIZE = 55px

li
  margin-left -5px
  relative()
  > div
    width CIRCLE_SIZE
    height CIRCLE_SIZE
    display table-cell
    vertical-align middle
  span
    display block
    line-height 1
    &:first-child
      font-size 20px
    &:last-child
      font-size 16px
      transform scale(12 / 16)
