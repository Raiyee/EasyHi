@require "../styles/_variables"

li
  float left
  text-align center
  margin-left -5px
  color SUBTEXT_COLOR
  &.active
    color REVERSE_COLOR
  &.disabled
    color REMARK_COLOR
  &.monday
    margin-left 0
  > div
    width 55px
    height 55px
    display table-cell
    vertical-align middle
    z-index 1
    relative()
    span
      display block
      &:first-child
        font-size 20px
      &:last-child
        font-size 16px
        transform scale(12 / 16)
