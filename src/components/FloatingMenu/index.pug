div(:class="classes.container", :style="{width}", v-if="menuShow", @click.stop="toggleMenu")
  span.iconfont(:class="menuOpen ? 'icon-left' : 'icon-floatingmenu'")
  template(v-for="menu of menus")
    span(:class="classes.inactive", v-if="menu.inactive", @click.stop) {{ menu.text }}
    router-link(v-else-if="menu.link", :to="menu.link", tag="span") {{ menu.text }}
    span(v-else, @click="menu.action") {{ menu.text }}
