@import "../../styles/_variables"

IMG_WRAP_MARGIN = 40px

.yoga
  size 95px
  margin-top IMG_WRAP_MARGIN
  margin-bottom IMG_WRAP_MARGIN
  relative()
  background-color BACK_COLOR

  > img
    size 90px
    absolute()
    left 50%
    top 50%
    transform translate3d(-50%, -50%, 0)

.form-group
  margin-bottom 25px

  :global(.form-control-static)
    padding-left 50px
    padding-bottom 0
