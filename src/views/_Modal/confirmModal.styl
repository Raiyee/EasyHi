@require '../../styles/_variables.styl'

.confirm
  display none
  overflow hidden
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  z-index 1050
  -webkit-overflow-scrolling touch
  outline 0

  &.fade .confirm-dialog
    transform translate(0, -25%)
    transition transform .3s ease-out

  &.in .confirm-dialog
    transform translate(0, 0)

:global(.modal-open) .confirm
  overflow-x hidden
  overflow-y auto

.confirm-dialog
  position relative
  width auto
  margin 10px

.confirm-content
  background-color BACK_LIGHT_COLOR
  border 1px solid rgba(0, 0, 0, .2)
  border-radius 6px
  box-shadow 0 3px 9px rgba(0, 0, 0, .5)
  background-clip padding-box
  outline 0
  width 70%
  max-width 448px
  position fixed
  top 50%
  left 50%
  z-index 100000
  transform translate(-50%, -50%)

.confirm-header
  padding 10px
  border-bottom 1px solid BACK_COLOR
  clearfix()

.confirm-header .close
  margin-top -2px

.confirm-title
  margin 0
  line-height 22px

.confirm-body
  padding 22px
  text-align center
  line-height 22px
  p
    margin 0

.confirm-footer
  text-align center
  border-top 1px solid BACK_COLOR
  .btn-footer
    display inline-block
    width 49%
    cursor pointer
    line-height 50px

  .btn-cancel
    border-right 1px solid BACK_COLOR

  clearfix()


@media (min-width 768px)
  .confirm-dialog
    width 600px
    margin 30px auto
  .confirm-content
    box-shadow 0 5px 15px rgba(0, 0, 0, .5)
