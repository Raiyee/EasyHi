.subscribe-panel {
  margin-bottom: 5px;

  .panel-title{
    color: #000;
    font-size: 15px;
    font-weight: normal;

    small {
      color: #555;

      + a {
        font-size: 13px;
        font-weight: 100;
        text-decoration: none;

        > span{
          font-size: 13px;
          color: #808080;
        }
      }
    }
  }

  .panel-body {
    > span {
      margin-right: 5px;
      transform: scale(1.2);

      &, + div {
        float: left;
      }
    }

    .count {
      font-size: 18px;
    }
  }

  .panel-footer {
    border-top: 1px dashed #c2c2c2;
    border-bottom-style: none;
    background-color: white;
  }

  .no-course {
    > div {
      color: #808080;
      margin-bottom: 20px;

      + .btn {
        padding-left: 25px;
        padding-right: 25px;
      }
    }
  }
}
