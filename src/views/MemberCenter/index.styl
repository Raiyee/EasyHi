.container
  :global(.media-object)
    size 70px
    border 2px solid $reverse-color
    background-color $reverse-color

  :global(.media-right)
    white-space no-wrap

  :global(.panel-full)
    margin-top 5px
    margin-bottom 0

    &:last-child
      margin-bottom 15px

  :global(.panel-title)
    color $stress-color
    font-size 15px
    font-weight normal

  > :first-child
    padding 20px 15px
    color $reverse-color

    :global(.media-right .icon-message)
      display inline-block

      &:before
        font-size 30px

      > span
        absolute()
        right -8px
        size 28px
        padding 2px
        background-color $highlight-color
        border-radius 50%
        border 1px solid $reverse-color
        scaleSize(8)

.show
  background-color $back-color
  color $stress-color
  line-height 22px
  padding-left 10px

  span
    float left

    &:last-child
      font-size 14px

.count
  font-size 18px

.subscription-panel
  :global
    .panel-title
      small
        color $primary-color

      a
        scaleSize()

        span
          color $subtext-color

    .panel-body
      > div
        display table-cell

        :global(.iconfont)
          display inline-block
          margin-right 10px
          scaleSize(18)

    .panel-footer
      border-top 1px dashed $dashed-line-color
      background-color $reverse-color

.no-course
  color gray

  :global(.btn)
    margin-top 20px
    padding 2px 25px

.card-panel ul
  display flex

  li
    flex 1

    + li
      border-left 1px solid $card-line-color

    > span
      font-size 30px

.contact-panel
  color $primary-color

  hr
    margin-top 10px
    margin-bottom 10px

  :global(.panel-body)
    padding 10px 0
