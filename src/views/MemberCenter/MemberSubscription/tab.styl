@require "../../../styles/_variables"
.container
  .ul-container
    overflow-x scroll

    ul
      padding 0

      li
        float left
        list-style none
        text-align center
        transition all 5s ease
        border-bottom 0

        span
          display block
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
          padding 10px 10px

      .active
        border-bottom 1px solid
