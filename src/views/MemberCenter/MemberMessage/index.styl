@require "../../../styles/_variables"

IMG_SIZE = 160px

.panel-title
  padding 10px

.date
  padding-left 5px
  border-left 5px solid
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

.panel-content
  padding-left 0

  span
    display inline-block

  li
    padding 10px
    background BACK_LIGHT_COLOR

    + li
      border-top 1px solid BACK_COLOR

.time
  float right
  smallSize()

.msg-content
  margin-top 10px
  smallSize()

.no-detail
  text-align center
  padding-top 20px
  font-size 15px
  color SUBTEXT_COLOR

  img
    width IMG_SIZE
    height IMG_SIZE
    margin-bottom 30px
