.mobile-modal

  :global
    .modal-content
      width 320px
      text-align center
      middleCenter(fixed)

    .modal-header
      margin 0 10px
      padding 15px
      font-size 16px
      font-weight bold

    .modal-body
      padding 15px

    .input-group
      margin-top 15px

    .modal-footer
      display flex
      padding 0

.tips
  color $highlight-color
  margin-top 5px

.btn
  flex 1
  padding 15px
  cursor pointer
  text-align center
  overflow ellipsis
