:global
  .shadow-bottom
    margin-bottom 10px
    padding 0 10px
    background-color $reverse-color

    > :first-child
      border-bottom 1px dashed $border-color

.rate
  padding-bottom 5px
  text-align center
  color $primary-color
  line-height 1

  > :first-child
    font-size 15px
    padding-top 20px

  > :last-child
    margin-top 23px
    margin-bottom 22px

.content
  background-color $reverse-color
  padding 0 10px
  margin-bottom 20px

  > textarea
    height 75px
    margin 15px 0 10px
    padding 0

  > :nth-child(2)
    padding-bottom 5px

.anonymous
  padding 5px 0 10px

  > :nth-child(2)
    scaleSize()

  > :last-child
    display inline-block
    float right


.footer
  margin 0 16px
  text-align center

  > div
    width 100%
    padding 10px 12px
