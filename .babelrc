{
  "presets": [
    "es2015",
    "stage-0"
  ],
  "plugins": [
    "add-module-exports",
    "syntax-flow",
    "transform-flow-strip-types"
  ],
  "comments": false,
  "passPerPreset": true,
  "env": {
    "development": {
      "plugins": [
        [
          "flow-runtime",
          {
            "assert": true,
            "decorate": true
          }
        ]
      ]
    },
    "testing": {
      "plugins": [
        [
          "__coverage__",
          {
            "ignore": "test/"
          }
        ]
      ]
    }
  }
}
